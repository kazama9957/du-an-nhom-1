@model QLNS.Models.Feedback

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Feedback Form</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(model => model.EmployeeID)
        @Html.DropDownList("EmployeeID", null, "-- Select Employee --", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.EmployeeID)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Title, new { @class = "control-label" })
        @Html.EditorFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Content, new { @class = "control-label" })
        @Html.EditorFor(model => model.Content)
        @Html.ValidationMessageFor(model => model.Content)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.FeedbackDate)
        @Html.TextBoxFor(model => model.FeedbackDate, "{0:yyyy-MM-dd}", new { @type = "date" })
        @Html.ValidationMessageFor(model => model.FeedbackDate)
    </div>
    <input type="submit" value="Save" class="btn btn-primary" />
}
<p>@Html.ActionLink("Back to List", "Index")</p>
