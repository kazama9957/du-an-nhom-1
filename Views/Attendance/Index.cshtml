@model IEnumerable<QLNS.Models.Attendance>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Attendance List</h2>
@if (Session["UserRole"] != null && Session["UserRole"].ToString() == "Admin")
{
    <p>
        @Html.ActionLink("Create new", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>ID</th>
        <th>EmployeeID</th>
        <th>WorkDate</th>
        <th>CheckIn</th>
        <th>CheckOut</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@(item.AttendanceID)</td>
            <td>@item.EmployeeID</td>
            <td>@item.WorkDate</td>
            <td>@item.CheckIn</td>
            <td>@item.CheckOut</td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = item.AttendanceID }) | @Html.ActionLink("Details", "Details", new { id = item.AttendanceID }) | @Html.ActionLink("Delete", "Delete", new { id = item.AttendanceID })</td>
        </tr>
    }
</table>
