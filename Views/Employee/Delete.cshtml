@model QLNS.Models.Employee

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Employee</h2>

<h4>Are you sure you want to delete this?</h4>
<hr />
<dl class="row">
    <dt>EmployeeID</dt>
    <dd>@Model.EmployeeID</dd>
    <dt>FullName</dt>
    <dd>@Model.FullName</dd>
    <dt>Gender</dt>
    <dd>@Model.Gender</dd>
    <dt>BirthDate</dt>
    <dd>@Model.BirthDate</dd>
    <dt>Phone</dt>
    <dd>@Model.Phone</dd>
    <dt>Email</dt>
    <dd>@Model.Email</dd>
    <dt>Address</dt>
    <dd>@Model.Address</dd>
    <dt>Position</dt>
    <dd>@Model.Position</dd>
    <dt>DepartmentID</dt>
    <dd class="col-sm-9">@Model.DepartmentID</dd>
    <dt>Status</dt>
    <dd>@Model.Status</dd>

</dl>

@using (Html.BeginForm("Delete", "Employee", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.EmployeeID)
    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary ms-2" })
}
