@model QLNS.Models.EmployeeProfile

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit EmployeeProfile</h2>

@using (Html.BeginForm("Edit", "EmployeeProfile", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ProfileID)
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(model => model.EmployeeID)
        @Html.DropDownList("EmployeeID", null, "-- Select Employee --", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.EmployeeID)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.IDCard, new { @class = "control-label" })
        @Html.EditorFor(model => model.IDCard)
        @Html.ValidationMessageFor(model => model.IDCard)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.IssueDate)
        @Html.TextBoxFor(model => model.IssueDate, "{0:yyyy-MM-dd}", new { @type = "date" })
        @Html.ValidationMessageFor(model => model.IssueDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.IssuePlace, new { @class = "control-label" })
        @Html.EditorFor(model => model.IssuePlace)
        @Html.ValidationMessageFor(model => model.IssuePlace)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.EducationLevel, new { @class = "control-label" })
        @Html.EditorFor(model => model.EducationLevel)
        @Html.ValidationMessageFor(model => model.EducationLevel)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Experience, new { @class = "control-label" })
        @Html.EditorFor(model => model.Experience)
        @Html.ValidationMessageFor(model => model.Experience)
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary ms-2" })
}

