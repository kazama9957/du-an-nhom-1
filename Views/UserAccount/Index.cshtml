@model IEnumerable<QLNS.Models.UserAccount>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UserAccount List</h2>
@if (Session["UserRole"] != null && Session["UserRole"].ToString() == "Admin")
{
    <p>
        @Html.ActionLink("Tạo tài khoản mới", "Create", null, new { @class = "btn btn-primary" })
    </p>
}
<table class="table">
    <tr>
        <th>ID</th>
        <th>EmployeeID</th>
        <th>Username</th>
        <th>PasswordHash</th>
        <th>Role</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@(item.UserID)</td>
            <td>@item.EmployeeID</td>
            <td>@item.Username</td>
            <td>@item.PasswordHash</td>
            <td>@item.Role</td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = item.UserID }) | @Html.ActionLink("Details", "Details", new { id = item.UserID }) | @Html.ActionLink("Delete", "Delete", new { id = item.UserID })</td>
        </tr>
    }
</table>