@model QLNS.Models.UserAccount

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete UserAccount</h2>
<h4>Bạn có chắc muốn xóa bản ghi này?</h4>
<dl class="dl-horizontal">
    <dt>EmployeeID</dt>
    <dd>@Model.EmployeeID</dd>
    <dt>Username</dt>
    <dd>@Model.Username</dd>
    <dt>PasswordHash</dt>
    <dd>@Model.PasswordHash</dd>
    <dt>Role</dt>
    <dd>@Model.Role</dd>
</dl>
@using (Html.BeginForm("Delete", "UserAccount", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UserID)
    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary ms-2" })
}