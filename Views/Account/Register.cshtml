@model QLNS.Models.UserAccount

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }
                @if (ViewBag.Success != null)
                {
                    <div class="alert alert-success">@ViewBag.Success</div>
                }
                <h2>Đăng ký Admin</h2>
                <p>Tạo tài khoản quản trị hệ thống</p>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.TextBoxFor(m => m.Username, new { @class = "form-control mb-3", placeholder = "Tên đăng nhập", required = "required" })
                @Html.PasswordFor(m => m.PasswordHash, new { @class = "form-control mb-3", placeholder = "Mật khẩu", required = "required" })

                <button type="submit" class="btn btn-success w-100">Tạo tài khoản</button>
            }
            <a href="@Url.Action("Login","Account")" class="btn btn-secondary w-100 mt-2">Quay lại đăng nhập</a>
        </div>
    </div>
</body>
</html>