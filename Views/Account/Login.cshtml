
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>

    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <h2>Đăng nhập</h2>
                <p>Chọn tài khoản để đăng nhập</p>
            </div>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">@ViewBag.Error</div>
            }

            <h5 class="text-start mt-3">Đăng nhập Admin</h5>
            <form action="/Account/LoginAdmin" method="post">

                <div class="mb-3">
                    <input type="text" name="Username" class="form-control"
                           placeholder="Tên đăng nhập Admin" required />
                </div>

                <div class="mb-3">
                    <input type="password" name="Password" class="form-control"
                           placeholder="Mật khẩu" required />
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    Đăng nhập Admin
                </button>
            </form>

            <h5 class="text-start mt-4">Đăng nhập Nhân viên</h5>
            <form action="/Account/LoginNV" method="post">

                <div class="mb-3">
                    <input type="text" name="Username" class="form-control"
                           placeholder="Tên đăng nhập Nhân viên" required />
                </div>

                <div class="mb-3">
                    <input type="password" name="Password" class="form-control"
                           placeholder="Mật khẩu" required />
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    Đăng nhập Nhân viên
                </button>
            </form>

            <p class="mt-3">
                Chưa có tài khoản Admin? <a href="/Account/Register">Đăng ký ngay</a>
            </p>
        </div>
    </div>
</body>
</html>