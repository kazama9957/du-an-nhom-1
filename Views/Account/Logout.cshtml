
@{
    ViewBag.Title = "Logout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2>Đăng xuất</h2>
            <p>Bạn có muốn thoát khỏi hệ thống?</p>
        </div>
        @using (Html.BeginForm("LogoutConfirmed", "Account", FormMethod.Post))
        {
            <button class="btn btn-danger w-100 mb-2">Đăng xuất</button>
        }
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary w-100">Hủy</a>
    </div>
</div>