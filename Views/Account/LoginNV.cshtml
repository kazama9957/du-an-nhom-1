
@{
    ViewBag.Title = "LoginNV";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2>Nhân viên</h2>
            <p>Đăng nhập để tiếp tục</p>
        </div>
        @using (Html.BeginForm("LoginNV", "Account", FormMethod.Post))
        {
            <input name="username" class="form-control mb-3" placeholder="Mã nhân viên" required />
            <input name="password" type="password" class="form-control mb-3" placeholder="Mật khẩu" required />
            <button class="btn btn-primary w-100">Đăng nhập</button>
        }
        <p class="mt-3"><a href="@Url.Action("Login","Account")">← Chọn lại vai trò</a></p>
    </div>
</div>