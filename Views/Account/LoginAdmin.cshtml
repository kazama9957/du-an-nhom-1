
@{
    ViewBag.Title = "LoginAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2>Quản trị viên</h2>
            <p>Đăng nhập để quản lý hệ thống</p>
        </div>
        @using (Html.BeginForm("LoginAdmin", "Account", FormMethod.Post))
        {
            <input name="username" class="form-control mb-3" placeholder="Tên đăng nhập" required />
            <input name="password" type="password" class="form-control mb-3" placeholder="Mật khẩu" required />
            <button class="btn btn-dark w-100">Đăng nhập Admin</button>
        }
        <p class="mt-3"><a href="@Url.Action("Register","Account")">Chưa có tài khoản?</a></p>
    </div>
</div>