@model IEnumerable<QLNS.Models.Department>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Department List</h2>
@if (Session["UserRole"] != null && Session["UserRole"].ToString() == "Admin")
{
    <p>
        @Html.ActionLink("Create new", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>ID</th>
        <th>DepartmentName</th>
        <th>Description</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@(item.DepartmentID)</td>
            <td>@item.DepartmentName</td>
            <td>@item.Description</td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = item.DepartmentID }) | @Html.ActionLink("Details", "Details", new { id = item.DepartmentID }) | @Html.ActionLink("Delete", "Delete", new { id = item.DepartmentID })</td>
        </tr>
    }
</table>